{%macro SectionVedio(vedioUrl="",doc="",btnText="",imgUrl="")%}
  <div class="w-full relative vedio" >
        <div class="absolute top-0 right-0 left-0 bottom-0 bg-black opacity-40"></div>
        <video src="{{vedioUrl}}" autoplay muted loop class="w-full h-full object-cover "></video>
        <div class="absolute lg:top-1/3 md:top-1/3 sm:top-1/3 top-10 lg:right-40 sm:right-20 right-5">
            <div class=" lg:text-6xl md:text-4xl text-3xl font-bold text-white">
                <div>تأسيس الشركات
                </div>
                <div>في السعودية</div>
            </div>
            <div class=" font-semibold text-xl lg:w-5/12 md:w-8/12 w-11/12 text-white mt-4">
                {{doc}}
            </div>

            <div class=" mt-8">
                <a class=" bg-red-600 text-sm text-white px-8 py-2 rounded-md border border-dotted border-opacity-55 border-white "
                   onclick="handleMenuClick(); return false;">{{btnText}}</a>
            </div>
            <div class=" mt-6">
                <img class="w-64" src="{{imgUrl}}" alt="">
            </div>
        </div>
    </div>
{%endmacro%}